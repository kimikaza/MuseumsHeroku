<h1>Listing pictures</h1>

<table>
  <tr>
    <th>Picture</th>
    <th>Name</th>
    <th>Order</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pictures.each do |picture| %>
  <tr>
    <td><img src="<%= "#{ActionController::Base.relative_url_root}/data/#{picture.name}"%>" width="50"/></td>
    <td><%= picture.name %></td>
    <td><%= picture.order %></td>
    <td><%= link_to 'Show', museum_picture_path(@museum, picture) %></td>
    <td><%= link_to 'Edit', edit_museum_picture_path(@museum, picture) %></td>
    <td><%= link_to 'Destroy', [@museum, picture], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br/>

<%= link_to 'New Picture', new_museum_picture_path(@museum) %>
