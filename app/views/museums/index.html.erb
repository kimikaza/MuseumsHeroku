<h1>Listing museums</h1>

<table>
  <tr>
    <th>Name hr</th>
    <th>Avg rating</th>
    <th>Num ratings</th>
    <th>City</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @museums.each do |museum| %>
  <tr>
    <td><%= museum.name_hr %></td> 
    <td><%= museum.avg_rating %></td>
    <td><%= museum.num_ratings %></td>
    <td><%= museum.city %></td>
    <td><%= museum.latitude %></td>
    <td><%= museum.longitude %></td>
    <td><%= link_to 'Show', museum %></td>
    <td><%= link_to 'Edit', edit_museum_path(museum) %></td>
    <td><%= link_to 'Destroy', museum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

