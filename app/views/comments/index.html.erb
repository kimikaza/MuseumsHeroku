<h1>Listing comments</h1>

<table>
  <tr>
    <th>Commtext</th>
    <th>Commenter</th>
    <th>Museum</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.commtext %></td>
    <td><%= comment.commenter %></td>
    <td><%= comment.museum_id %></td>
    <td><%= link_to 'Show', museum_comment_path(@museum, comment) %></td>
    <td><%= link_to 'Edit', edit_museum_comment_path(@museum, comment) %></td>
    <td><%= link_to 'Destroy', [@museum, comment], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

